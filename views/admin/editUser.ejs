<%- include('../layouts/header.ejs') -%>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-light">
                <div class="card-header bg-primary text-white">
                    <h1 class="card-title">Edit User</h1>
                </div>
                <div class="card-body">
                    <form action="/admin/editUser" method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" name="name" id="name" class="form-control" placeholder="Enter name" value="<%= user.name %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="email" id="email" class="form-control" placeholder="Enter email" value="<%= user.email %>" required>
                        </div>
                        <input type="hidden" name="id" value="<%= user._id %>" required>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Mobile Number</label>
                            <input type="number" name="phone" id="phone" class="form-control" placeholder="Enter Mobile Number" value="<%= user.phone %>" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-check-label">Verification Status:</label>
                            <div class="form-check">
                                <input type="radio" name="verify" id="verify1" class="form-check-input" value="1" <% if (user.isVerified == 1) { %> checked <% } %>>
                                <label for="verify1" class="form-check-label">Verified</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" name="verify" id="verify0" class="form-check-input" value="0" <% if (user.isVerified == 0) { %> checked <% } %>>
                                <label for="verify0" class="form-check-label">Unverified</label>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <input type="submit" class="btn btn-primary" value="Update User">
                            <a href="/admin/dashboard" class="btn btn-secondary">Go to Dashboard</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer.ejs') -%>
